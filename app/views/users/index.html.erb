<p class="lead">Üdvözöllek a súlyozott átlagszámító oldalon<br> </p>
<table class="table table-bordered">
  <thead>
    <tr class="success">
      <th colspan="1"></th>
      <th>Felhasználó neve</th>
      <th>Műveletek</th>
    </tr>
  </thead>

  <tbody>

  <% @users.each do |user| %>
      <tr class="info">
        <th colspan="1"></th>
        <td><%= link_to user.name, user %></td>
        <td>
          <%= link_to 'szerkesztés', edit_user_path(user) %>,
          <%= link_to 'törlés', user, method: :delete, data: {confirm: 'Biztos, hogy törlöd?'} %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
<div class="row">
  <% @users.each do |user| %>
      <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
        <h2><%= user.name %></h2>
        <h2><%= user.avg %></h2>
      </div>
  <% end %>
</div>
